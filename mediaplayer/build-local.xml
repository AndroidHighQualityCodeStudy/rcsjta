<?xml version="1.0" encoding="UTF-8"?>
<project name="mediaplayer" default="help">

	<property name="terminal.root" value="." />
	<property name="terminal.media" value="${terminal.root}/rcs_media.jar" />

	<!-- Generate media JAR used in the RI -->
	<target name="jar">
		<echo>Generate ${terminal.media} file</echo>
		<jar destfile="${terminal.media}" basedir="${terminal.root}/bin/classes" />
	</target>

	<target name="clean">
		<echo>Delete ${terminal.media} file</echo>
		<delete file="${terminal.media}" />
	</target>

	<target name="all" depends="clean,jar" />

	<target name="help">
		<echo>Library Ant Build. Available targets:</echo>
		<echo> help: Displays this help.</echo>
		<echo> clean: Removes output files created by other targets.</echo>
		<echo> jar: Generates jar library.</echo>
		<echo> all: Deletes then creates jar library.</echo>
	</target>

</project>

<?xml version="1.0" encoding="UTF-8"?>
<project name="ims_notification" default="help">

	<property name="terminal.root" value="." />
	<property name="terminal.lib_dst" value="${terminal.root}/libs" />
	<property name="terminal.lib_src" value="${terminal.root}/../../core" />
	<property name="terminal.target" value="rcs_api.jar" />

	<target name="libs">
		<ant antfile="build.xml" target="api" dir="${terminal.lib_src}"/>
		<echo>Copy ${terminal.target} file</echo>
		<copy file="${terminal.lib_src}/${terminal.target}" todir="${terminal.lib_dst}" />
	</target>

	<target name="clean">
		<echo>Delete library files</echo>
		<delete file="${terminal.lib_dst}/${terminal.target}"/>
	</target>

	<target name="all" depends="clean,libs" />

	<target name="help">
		<echo>Library Ant Build. Available targets:</echo>
		<echo> help: Displays this help.</echo>
		<echo> clean: Removes output files created by other targets.</echo>
		<echo> libs: Generate jar libraries.</echo>
		<echo> all: Deletes then generate jar libraries.</echo>
	</target>

</project>

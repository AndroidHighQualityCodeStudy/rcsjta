<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
 android:versionCode="1"
 android:versionName="3.0.0"
 package="com.orangelabs.rcs.ri">

	<uses-sdk android:minSdkVersion="5"
		android:targetSdkVersion="15"/>
	
	<uses-permission android:name="android.permission.GET_TASKS"/>
	<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
	<uses-permission android:name="android.permission.CALL_PHONE"/>
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application android:icon="@drawable/app_icon" android:label="@string/app_name">

        <uses-library android:name="com.google.android.maps"/>
        
		<!-- Main -->
        <activity android:name=".RI">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".AboutRI"/>

		<!-- Intents API -->
        
        <activity android:name=".TestIntentsApi"/>

        <activity android:name=".intents.IntentClients"/>

        <activity android:name=".intents.IntentApps"/>
        
		<!-- Contacts API -->
        
        <activity android:name=".TestContactsApi"/>
        
        <!-- Capabilities API -->

        <activity android:name=".TestCapabilitiesApi"/>

        <activity android:name=".capabilities.RequestCapabilities"/>

		<activity android:name=".capabilities.MyCapabilities"/>

		<activity android:name=".capabilities.RequestAllCapabilities"/>
		
		<activity android:name=".capabilities.ListCapabilities"/>

		<!-- Messaging API -->
        <activity android:name=".TestMessagingApi"/>

        <activity android:icon="@drawable/ri_quick_ft_icon"
            android:label="@string/label_quick_ft"
        	android:name=".messaging.InitiateFileTransfer">
			<intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="vnd.android.cursor.item/org.gsma.joyn.file-transfer"/>
            </intent-filter>
            
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="org.gsma.joyn.action.INITIATE_FT"/>                
            </intent-filter>					
		</activity>
        
		<receiver android:name=".messaging.FileTransferInvitationReceiver">
            <intent-filter>
		    	<action android:name="org.gsma.joyn.ft.action.NEW_FILE_TRANSFER"/>
            </intent-filter>
        </receiver>

        <activity android:name=".messaging.ReceiveFileTransfer"/>

        <activity android:name=".messaging.ChatList"/>
        
        <activity android:name=".messaging.InitiateSingleChat">
			<intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
			<intent-filter>
                <action android:name="org.gsma.joyn.action.INITIATE_CHAT"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
		</activity>        
        
		<receiver android:name=".messaging.SingleChatInvitationReceiver">
            <intent-filter>
		    	<action android:name="org.gsma.joyn.chat.action.NEW_CHAT"/>
            </intent-filter>
        </receiver>
        
		<receiver android:name=".messaging.SingleChatReplacedReceiver"/>

        <activity android:name=".messaging.SingleChatView"/>
				
        <activity android:name=".messaging.InitiateGroupChat">
			<intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
			<intent-filter>
                <action android:name="org.gsma.joyn.action.INITIATE_GROUP_CHAT"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
		</activity>        

		<receiver android:name=".messaging.GroupChatInvitationReceiver">
            <intent-filter>
		    	<action android:name="org.gsma.joyn.chat.action.NEW_GROUP_CHAT"/>
            </intent-filter>
        </receiver>
		
        <activity android:name=".messaging.GroupChatView"/>
                
        <!-- Rich call API -->
        <activity android:name=".TestRichCallApi"/>

        <activity android:name=".richcall.InitiateImageSharing"/>
        
		<receiver android:name=".richcall.ImageSharingInvitationReceiver">
            <intent-filter>
		    	<action android:name="org.gsma.joyn.ish.action.NEW_IMAGE_SHARING"/>
            </intent-filter>
        </receiver>

        <activity android:name=".richcall.ReceiveImageSharing"/>
        
</application>

</manifest>

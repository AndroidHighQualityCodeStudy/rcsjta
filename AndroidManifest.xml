<?xml version="1.0" encoding="utf-8" standalone="no"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
 android:versionCode="1"
 android:versionName="2.4.12"
 package="org.gsma.joyn">
      
	<uses-sdk android:minSdkVersion="5"
		android:targetSdkVersion="15"/>

	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.WRITE_SMS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.CALL_PHONE"/>
	<uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>  
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.GET_ACCOUNTS"/>
	<uses-permission android:name="android.permission.MANAGE_ACCOUNTS"/>
	<uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>
	<uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS"/>
	 
	<uses-permission android:name="org.gsma.joyn.permission.RCS"/>	
	 
	<permission android:name="org.gsma.joyn.permission.RCS"
        android:label="@string/rcs_core_permission"
        android:description="@string/rcs_core_permission_desc"
        android:protectionLevel="normal" />	 
 
	<permission android:name="org.gsma.joyn.permission.RCS_EXTENSION"
        android:label="@string/rcs_core_permission_ext"
        android:description="@string/rcs_core_permission_ext_desc"
        android:protectionLevel="normal" />	 

	<application android:icon="@drawable/rcs_icon" android:label="@string/rcs_core_application_title">  
		
		<!-- the following meta-data is used to identify the application as a joyn client -->
		<meta-data android:name="gsma.joyn.client"
			android:value="true" />
		
		<!-- the following meta-data is used to provide the value of the intent action that
		 can be used by other applications to start the joyn client settings screen -->
		<meta-data android:name="gsma.joyn.settings.activity"
			android:value="org.gsma.joyn.SETTINGS" />

		<!-- RCS service -->	

		<service android:name="org.gsma.joyn.service.RcsCoreService">  
	        <intent-filter>
	            <action android:name="org.gsma.joyn.SERVICE"/>
	            <action android:name="org.gsma.joyn.service.api.client.IImsApi"/>
	            <action android:name="org.gsma.joyn.service.api.client.terms.ITermsApi"/>
	            <action android:name="org.gsma.joyn.service.api.client.capability.ICapabilityApi"/>
	            <action android:name="org.gsma.joyn.service.api.client.presence.IPresenceApi"/>
	            <action android:name="org.gsma.joyn.service.api.client.messaging.IMessagingApi"/>
	            <action android:name="org.gsma.joyn.service.api.client.richcall.IRichCallApi"/>
	            <action android:name="org.gsma.joyn.service.api.client.sip.ISipApi"/>	            
	        </intent-filter>
	    </service>
	
		<!-- RCS settings application -->
	
		<activity android:clearTaskOnLaunch="true"
			android:icon="@drawable/rcs_icon"
			android:label="@string/rcs_settings_title_settings"
			android:launchMode="singleInstance"
			android:name="org.gsma.joyn.settings.RcsSettings"
		  android:process=":settings" 
			>
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>            
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <action android:name="org.gsma.joyn.SETTINGS"/>                
            </intent-filter>            
 		</activity>

		<activity android:name="org.gsma.joyn.settings.AboutDisplay"
		  	android:process=":settings" />

		<activity android:name="org.gsma.joyn.settings.UserprofileRcsSettings"
		  	android:process=":settings" />

		<activity android:name="org.gsma.joyn.settings.PresenceRcsSettings"
		  	android:process=":settings" />

		<activity android:name="org.gsma.joyn.settings.CShRcsSettings"
		  	android:process=":settings" />

		<activity android:name="org.gsma.joyn.settings.MessagingRcsSettings"
		  	android:process=":settings" />
        
		<!-- RCS data providers -->	

		<provider android:authorities="org.gsma.joyn.settings"
			android:writePermission="org.gsma.joyn.permission.RCS"
			android:readPermission="org.gsma.joyn.permission.RCS"
			android:name="org.gsma.joyn.settings.RcsSettingsProvider"/>

		<provider android:authorities="org.gsma.joyn.messaging"
			android:writePermission="org.gsma.joyn.permission.RCS"
			android:readPermission="org.gsma.joyn.permission.RCS"
			android:name="org.gsma.joyn.messaging.RichMessagingProvider"/>
			
		<provider android:authorities="org.gsma.joyn.csh"
			android:writePermission="org.gsma.joyn.permission.RCS"
			android:readPermission="org.gsma.joyn.permission.RCS"
			android:name="org.gsma.joyn.richcall.RichCallProvider"/>
			
		<!-- Device events receiver -->	

        <!-- Startup service -->
        <service android:name="org.gsma.joyn.service.StartService">  
            <intent-filter>
                <action android:name="org.gsma.joyn.STARTUP"/>
            </intent-filter>
        </service>

		<!-- GSMA UI connectors -->

		<receiver android:name="org.gsma.joyn.service.api.server.gsma.GetRcsStatusReceiver">  
 			<intent-filter>
 				<action android:name="android.net.rcs.GET_RCS_STATUS"/>  
 			</intent-filter>  
		</receiver> 

		<receiver android:name="org.gsma.joyn.service.api.server.gsma.GetMyCapabilitiesReceiver">  
 			<intent-filter>
 				<action android:name="android.net.rcs.GET_MY_CAPABILITIES"/>  
 			</intent-filter>  
		</receiver> 

		<receiver android:name="org.gsma.joyn.service.api.server.gsma.GetContactCapabilitiesReceiver">  
 			<intent-filter>
 				<action android:name="android.net.rcs.GET_CONTACT_CAPABILITIES"/>  
 			</intent-filter>  
		</receiver> 

    </application> 

</manifest>

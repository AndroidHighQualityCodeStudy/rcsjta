<project name="rcsjta" basedir="." default="api">

  <property file="local.properties"/>
  <property file="project.properties"/>
  <property name="android_jar" value="${sdk.dir}/platforms/${target}/android.jar"/>
	<property name="terminal.root" 		value="${basedir}"/>
	<property name="terminal.api" 		value="${terminal.root}/rcsjta.jar"/>

  <target name="api" description="GSMA RCS API jar file">
    <echo>Generate ${terminal.api} file</echo>

    <delete file="${terminal.api}"/>
    
    <jar destfile="${terminal.api}" basedir="${terminal.root}/bin/classes">
    </jar>
    
  </target>

  <target name="docs" description="GSMA RCS API Documentation">
    <echo>Generate Javadoc</echo>

    <javadoc
        doctitle="GSMA RCS API"
        verbose="on"
        destdir="docs"
        use="true"
        access="public" 
        classpath="${android_jar}:${project.all.jars.path}" 
        sourcepath="src"
        packagenames="${project.app.package}.*" 
        source="1.5"
        stylesheetfile="./android-developer-docs.css"
        >
    </javadoc>
  </target>


</project>

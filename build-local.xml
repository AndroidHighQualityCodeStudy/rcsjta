<project name="GSMA Terminal API" basedir=".">

	<property environment="env"/>
	<property name="android.root" 		value="${env.ANDROID_SDK}"/>
	<property name="terminal.root" 		value="."/>
	<property name="terminal.api" 		value="${terminal.root}/core/rcs_api.jar"/>
	<property name="terminal.build"		value="${terminal.root}/core/build"/>
	<property name="src.path" 		value="${terminal.root}/core/src"/>

	<path id="j2se.lib">
		<fileset dir="${env.JAVA_HOME}/lib/">
			<include name="**/*.jar" />
		</fileset>
	</path>
	<property name="j2se.classpath" refid="j2se.lib"/>

	<path id="terminal.classpath">
       	<pathelement path="${j2se.classpath};${android.root}/android.jar;${terminal.build}/classes;${terminal.root}/build/classes"/>
	</path>

    <!-- Generate RCS API DOCS -->

    <target name="docs" description="GSMA RCS Terminal API Documentation">
    <echo>Generate Javadoc</echo>
    <javadoc doctitle="GSMA RCS Terminal API"
        verbose="on"
        destdir="docs"
        use="true"
        access="public" 
        classpath="${android_jar}:${project.all.jars.path}" 
        sourcepath="${src.path}"
        packagenames="org.gsma.joyn.*">
    </javadoc>

  </target>

</project>

